{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowJs": true,
    "lib": ["es2016", "es2017", "esnext.asynciterable", "dom"],
    "types": ["node"],
    "jsx": "react"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./custom.d.ts", "**/*.tsx", "**/*.ts"]
}
